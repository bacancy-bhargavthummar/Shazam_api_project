
<div class="container">
  <div class="row">
    <div class="col-lg-12 mt-5">
      <% if flash[:alert] %>
        <div class="alert alert-warning"><%= flash[:alert] %></div>
      <% end %>
      <div class="mx-auto mt-5" style="width: 400px">
        <%= form_tag( search_path, remote: true, method: :get, class: "search_form") do %>
          <div class="form-group">
            <%= label_tag :track, 'Search for a Song '%>
            <%= text_field_tag :track, nil, placeholder: 'eg. Let her go', class: 'form-control', id: 'form_field' %>
          </div>
          <%= button_tag 'Search', data: { disable_with: "Searching..."}, class: 'btn btn-success btn-block' %>
        <% end %>
      </div>
      <div class="results"></div>
    </div>
  </div>
</div>